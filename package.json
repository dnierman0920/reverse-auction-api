{
  "name": "reverse-auction-api",
  "version": "1.0.0",
  "description": "An Api that tracks projects, bids, vendors and buyers",
  "main": "./src/app.ts",
  "scripts": {
    "dev": "NODE_ENV=dev nodemon -r tsconfig-paths/register src/app.ts",
    "start:dev": "npx nodemon",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/app.js",
    "test": "NODE_ENV=test mocha --check-leaks -r tsconfig-paths/register -r ts-node/register \"test/**/*.test.ts\""
  },
  "keywords": [
    "mongodb",
    "typescript",
    "REST",
    "api"
  ],
  "author": "David Nierman",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/supertest": "^2.0.12",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "supertest": "^6.3.3",
    "ts-dotenv": "^0.9.1",
    "tsconfig-paths": "^4.2.0",
    "@types/express": "^4.17.17",
    "chai": "^4.3.7",
    "mocha": "^10.2.0"
  },
  "dependencies": {
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "mongodb": "^5.6.0"
  }
}
